<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--公共属性-->
    <!--url链接-->
    <attr name="url" format="string" />
    <!--圆角-->
    <attr name="radius" format="dimension" />
    <!--边框颜色-->
    <attr name="borderColor" format="color" />
    <!--边框宽度-->
    <attr name="borderWidth" format="dimension" />
    <!--左上角圆角值-->
    <attr name="radiusTopLeft" format="dimension" />
    <!--右上角圆角值-->
    <attr name="radiusTopRight" format="dimension" />
    <!--左下角圆角值-->
    <attr name="radiusBottomLeft" format="dimension" />
    <!--右下角圆角值-->
    <attr name="radiusBottomRight" format="dimension" />
    <!--边框是否覆盖内容-->
    <attr name="borderCover" format="boolean" />
    <!--是否是圆-->
    <attr name="isCircle" format="boolean" />
    <!--是否禁用-->
    <attr name="disable" format="boolean" />
    <!--禁用时文字颜色-->
    <attr name="disableTextColor" format="color" />
    <!--加载中显示的图片-->
    <attr name="loadingRes" format="reference" />
    <!--加载错误显示的图片-->
    <attr name="errorRes" format="reference" />
    <!--是否有加载回调-->
    <attr name="loadCallback" format="boolean" />
    <!--是否开启图片加载动画-->
    <attr name="loadAnim" format="boolean" />
    <!--图片加载动画时间-->
    <attr name="animDuration" format="integer" />
    <!--图标-->
    <attr name="icon" format="reference" />
    <!--是否加载图片的真实大小-->
    <attr name="isLoadRealSize" format="boolean" />

    <!--网络图片-->
    <declare-styleable name="NetworkImageView">
        <attr name="url" />
        <attr name="loadingRes" />
        <attr name="errorRes" />
        <attr name="loadCallback" />
        <attr name="loadAnim" />
        <attr name="animDuration" />
        <attr name="isLoadRealSize" />
    </declare-styleable>


    <!--网络图片-->
    <declare-styleable name="NetworkRoundImageView">
        <attr name="url" />
        <attr name="loadingRes" />
        <attr name="errorRes" />
        <attr name="loadCallback" />
        <attr name="loadAnim" />
        <attr name="animDuration" />
        <attr name="isLoadRealSize" />
    </declare-styleable>


    <!--圆角图片-->
    <declare-styleable name="RoundImageView">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--边框是否覆盖图片-->
        <attr name="borderCover" />
        <!--内边距的颜色-->
        <attr name="paddingColor" format="color" />
    </declare-styleable>

    <!--圆角布局-->
    <declare-styleable name="RoundLayout">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--是否圆形-->
        <attr name="isCircle" />
    </declare-styleable>

    <!--圆角布局 只是为了有提示-->
    <declare-styleable name="RoundLinearLayout">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--是否圆形-->
        <attr name="isCircle" />
    </declare-styleable>


    <!--圆角布局 只是为了有提示-->
    <declare-styleable name="RoundRelativeLayout">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--是否圆形-->
        <attr name="isCircle" />
    </declare-styleable>


    <!--圆角布局 只是为了有提示-->
    <declare-styleable name="RoundFrameLayout">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--是否圆形-->
        <attr name="isCircle" />
    </declare-styleable>


    <!--圆角布局 只是为了有提示-->
    <declare-styleable name="RoundConstraintLayout">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--是否圆形-->
        <attr name="isCircle" />
    </declare-styleable>


    <!--圆角按钮-->
    <declare-styleable name="AppButton">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--是否圆形-->
        <attr name="isCircle" />
        <!--是否禁用-->
        <attr name="disable" />
        <!--禁用时的背景颜色-->
        <attr name="disableColor" format="color" />
        <!--禁用时文字颜色-->
        <attr name="disableTextColor" />
        <!--点击时的效果-->
        <attr name="clickAnimType" format="enum">
            <!--没有点击效果-->
            <enum name="none" value="0" />
            <!--默认效果 有一个打底颜色-->
            <enum name="defaultAnim" value="1" />
            <!--缩放动画-->
            <enum name="zoomAnim" value="2" />
        </attr>
        <!--禁用效果-->
        <attr name="disableEffect" format="enum">
            <!--半透明-->
            <enum name="alpha" value="0" />
            <!--设置背景颜色-->
            <enum name="color" value="1" />
        </attr>
    </declare-styleable>

    <!--圆角按钮-->
    <declare-styleable name="RoundTextView">
        <!--圆角-->
        <attr name="radius" />
        <!--边框颜色-->
        <attr name="borderColor" />
        <!--边框宽度-->
        <attr name="borderWidth" />
        <!--左上角圆角值-->
        <attr name="radiusTopLeft" />
        <!--右上角圆角值-->
        <attr name="radiusTopRight" />
        <!--左下角圆角值-->
        <attr name="radiusBottomLeft" />
        <!--右下角圆角值-->
        <attr name="radiusBottomRight" />
        <!--是否圆形-->
        <attr name="isCircle" />
    </declare-styleable>

    <!--开关按钮-->
    <declare-styleable name="SwitchButton">
        <!--关按钮图片-->
        <attr name="offIcon" format="reference" />
        <!--开按钮图片-->
        <attr name="onIcon" format="reference" />
        <!--是否为开-->
        <attr name="isOn" format="boolean" />
    </declare-styleable>

    <!--带Icon的TextView-->
    <declare-styleable name="IconTextView">
        <!--Icon的方向-->
        <attr name="iconDirection" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <!--Icon和文字的间距-->
        <attr name="iconSpacing" format="dimension" />
        <!--Icon宽度-->
        <attr name="iconWidth" format="dimension" />
        <!--Icon高度-->
        <attr name="iconHeight" format="dimension" />
        <!--图标-->
        <attr name="icon" />
    </declare-styleable>
</resources>